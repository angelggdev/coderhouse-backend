html 
    head
        title="Agregar producto"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body
    div(class="container d-flex flex-column justify-content-center", style='padding: 60px ;background-color: #CFCFEA; width:90vw;')
        h1(style='text-align:center; margin:30px;') Ingrese un producto
        form(method="POST", action="/api/productos")
            div.mb-3
                label(for="title", class="form-label") Nombre del producto
                input(type="text", name="title", class="form-control")
            div.mb-3
                label(for="price", class='form-label') Precio del producto
                input(type="number", name="price", class='form-control') 
            div.mb-3
                label(for="thumbnail", class='form-label') Url de la imagen del producto
                input(type="text", name="thumbnail", class='form-control')
            button(type="submit" class="btn btn-primary") Enviar
        include productos.pug


     
