html 
    head
        title="Agregar producto"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body
        if isLoggedIn
            div(class="container d-flex justify-content-between", style='padding: 10px 60px 10px 60px ;background-color: #CFCFEA; width:90vw; margin-bottom: 10px;')
                h2(style='text-align:center; color: green;') Bienvenidx 
                    span(style='margin:5px;')=username
                form(method='POST', action='/logout')
                    input(type="submit", class="btn btn-primary", value="Logout") 
            div(class="container d-flex flex-column justify-content-center", style='padding: 60px ;background-color: #CFCFEA; width:90vw;')
                h2(style='text-align:center; margin:30px;') Ingrese un producto
                form(id='productForm')
                    div.mb-3
                        label(for="title", class="form-label") Nombre del producto
                        input(type="text", id="title", name="title", class="form-control")
                    div.mb-3
                        label(for="price", class='form-label') Precio del producto
                        input(type="number", id="price", name="price", class='form-control') 
                    div.mb-3
                        label(for="thumbnail", class='form-label') Url de la imagen del producto
                        input(type="text", id="thumbnail", name="thumbnail", class='form-control')
                    input(type="submit" class="btn btn-primary")
                div(id="tablaProductos")
                include chat.pug
            script(src="https://code.jquery.com/jquery-3.6.0.js", integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=", crossorigin="anonymous")
            script(src="/socket.io/socket.io.js")
            script  
                include ../controllers/chat.js
            script
                include ../controllers/productos.js
        else 
            div
                include login.pug
            script(src="https://code.jquery.com/jquery-3.6.0.js", integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=", crossorigin="anonymous")



     
